@{
    ViewBag.Title = "用户列表";
}

<table id="dg" title="用户列表" class="easyui-datagrid"  
    url="@Url.Action("getall")"
    toolbar="#toolbar" pagination="true" pagePosition="bottom"
    rownumbers="true" fitcolumns="true" singleselect="true" fit="true" striped="true">
    <thead>
        <tr>
            <th field="ID" width="50">编号</th>
            <th field="Name" width="50">名称</th>
            <th field="GroupName" width="50">控制器</th>
        </tr>
    </thead>
</table>
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="create()">新增</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="edit()">编辑</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="deleteSingle()">删除</a>
    <div id="searchbox">
        @Html.EditorForModel()
        <div class="form-field form-field-submit">
            <button type="button" id="search" onclick="getSearch()" class="btn btn-green btn-save ">
                <i class="icon-button icon-btn-search"></i>
                查 询</button>
        </div>
    </div>
</div>

<div id="kwindow" class="easyui-dialog" data-options="iconCls:'icon-save',modal:true,closed:true,onLoad:onformLoad" style="width: 500px; height: 450px;">
</div>

<script type="text/javascript">

    function create() {
        var url = "@Url.Action("Create")";
        $('#kwindow').dialog('open')
        .dialog('refresh', url)

    }
    function onformLoad() {
        var title = $('#kwindow').find('form').attr('formtitle');
        $('#kwindow')
        .dialog('setTitle', title)
        $.validator.unobtrusive.parse($('#kwindow'));
    }

    function edit() {
        var row = $('#dg').datagrid('getSelected');
        if (!row) {
            Maitonn.JHelper.showError('提醒', '请选择要编辑的行');
        } else {
            var url = "@Url.Action("Edit")" + "/" + row.ID;
            $('#kwindow').dialog('open')
            .dialog('refresh', url)
        }
    }

    function deleteSingle() {
        var row = $('#dg').datagrid('getSelected');
        var id = row.ID;
        $.post("@Url.Action("Delete")", { ID: id }, function (res) {
            Maitonn.JHelper.showMessage(res);
            $('#dg').datagrid('reload');
        })
    }

    function ajaxFormSuccess(res) {
        Maitonn.JHelper.showMessage(res);
        $('#kwindow').dialog('close')
        $('#dg').datagrid('reload');
    }

    function getSearch() {
        $('#dg').datagrid('load', {
            SearchName: $('#SearchName').val(),
            ControllerID: $('#ControllerID').val()
        });
    }
</script>
